{
	"name": "@asmelabs/olib",
	"type": "module",
	"version": "0.2.0",
	"description": "An SDK for the OpenLibrary platform",
	"author": "Mehdi Asadli <asadlimehdi25@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/asmelabs/olib#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/asmelabs/olib.git"
	},
	"bugs": {
		"url": "https://github.com/asmelabs/olib/issues"
	},
	"keywords": [
		"olib",
		"open-library",
		"books",
		"authors",
		"sdk",
		"typescript",
		"javascript"
	],
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"prepare": "husky",
		"release": "bun run build && changeset publish",
		"version": "changeset version",
		"build": "tsup",
		"format": "biome format --write .",
		"lint": "biome lint",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"preflight": "bun install && bun run format && bun run lint && bun run test && bun run build"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"biome check --write ."
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.9",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.1"
	},
	"peerDependencies": {
		"typescript": "^5",
		"zod": "^4"
	}
}
